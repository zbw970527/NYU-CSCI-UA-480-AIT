<style>
table {
    border-collapse: collapse;
    width: 400px;
}

td, th {
    border: 1px solid #dddddd;
    text-align: center;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>

<body>
  <h3><b>My Anime List:</b></h3>
  <table>
    <tr>
      <th>Anime Name</th>
    </tr>
    {{#each anime}}
    <tr>
      <td><a href='/forum/{{slug}}'>{{animeName}}</a></td>
    </tr>
    {{/each}}
  </table>
  <h3><b>My Reviews:</b></h3>
  <table class="review">
    <tr>
      <th>Title</th>
      <th>Time</th>
    </tr>
    {{#each list}}
    <tr>
      <td><a href='/article/{{slug}}'>{{title}}</a></td>
      <td>{{date}}</td>
    </tr>
    {{/each}}
  </table>
</body>
